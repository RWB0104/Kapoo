{
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint",
		"sort-keys-fix",
		"import",
		"react"
	],
	"extends": [
		"plugin:@typescript-eslint/recommended"
	],
	"rules": {
		"array-bracket-newline": [
			"error"
		],
		"array-element-newline": [
			"error",
			"consistent"
		],
		"block-spacing": [
			"error",
			"always"
		],
		"brace-style": [
			"error",
			"allman"
		],
		"comma-dangle": [
			"error",
			"never"
		],
		"comma-style": [
			"error",
			"last"
		],
		"curly": [
			"error",
			"all"
		],
		"func-call-spacing": [
			"error",
			"never"
		],
		"import/extensions": "off",
		"import/named": "off",
		"import/no-anonymous-default-export": "error",
		"import/no-cycle": "off",
		"import/no-extraneous-dependencies": "off",
		"import/no-named-as-default": "off",
		"import/no-unresolved": "off",
		"import/order": [
			"error",
			{
				"alphabetize": {
					"caseInsensitive": true,
					"order": "asc"
				},
				"groups": [
					"external",
					"builtin",
					"internal",
					"sibling",
					"parent",
					"index"
				],
				"newlines-between": "always"
			}
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1,
				"ObjectExpression": 1
			}
		],
		"keyword-spacing": [
			"error",
			{
				"before": true,
				"after": true
			}
		],
		"quotes": [
			"error",
			"single"
		],
		"react/jsx-sort-props": [
			"error",
			{
				"callbacksLast": true,
				"ignoreCase": true,
				"multiline": "last",
				"noSortAlphabetically": false,
				"reservedFirst": false,
				"shorthandFirst": false,
				"shorthandLast": true
			}
		],
		"semi": [
			"error",
			"always"
		],
		"space-infix-ops": [
			"error",
			{
				"int32Hint": false
			}
		],
		"sort-keys-fix/sort-keys-fix": "error",
		"prefer-rest-params": "off"
	},
	"overrides": [
		{
			"files": [
				"*.ts",
				"*.tsx"
			],
			"rules": {
				"@typescript-eslint/no-var-requires": "error",
				"@typescript-eslint/no-explicit-any": "error",
				"@typescript-eslint/no-unused-vars": "error"
			}
		},
		{
			"files": [
				"*.js"
			],
			"rules": {
				"@typescript-eslint/no-var-requires": "off"
			}
		}
	]
}