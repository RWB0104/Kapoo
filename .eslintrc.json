{
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint",
		"unused-imports"
	],
	"extends": [
		"plugin:@typescript-eslint/recommended"
	],
	"rules": {
		"array-bracket-newline": [
			"error"
		],
		"array-element-newline": [
			"error",
			"consistent"
		],
		"block-spacing": [
			"error",
			"always"
		],
		"brace-style": [
			"error",
			"allman"
		],
		"comma-dangle": [
			"error",
			"never"
		],
		"comma-style": [
			"error",
			"last"
		],
		"curly": [
			"error",
			"all"
		],
		"func-call-spacing": [
			"error",
			"never"
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1,
				"ObjectExpression": 1
			}
		],
		"keyword-spacing": [
			"error",
			{
				"before": true,
				"after": true
			}
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"space-infix-ops": [
			"error",
			{
				"int32Hint": false
			}
		],
		"unused-imports/no-unused-imports": "error",
		"unused-imports/no-unused-vars": "error",
		"prefer-rest-params": "off"
	},
	"overrides": [
		{
			"files": [
				"*.ts",
				"*.tsx"
			],
			"rules": {
				"@typescript-eslint/no-var-requires": "error",
				"@typescript-eslint/no-explicit-any": "error",
				"@typescript-eslint/no-unused-vars": "error",
				"unused-imports/no-unused-imports": "error",
				"unused-imports/no-unused-vars": "error"
			}
		},
		{
			"files": [
				"*.js"
			],
			"rules": {
				"@typescript-eslint/no-var-requires": "off"
			}
		}
	]
}